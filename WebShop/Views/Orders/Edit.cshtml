@model WebShop.Models.Order

<h2>Edit Order</h2>

<form asp-action="Edit">
    <input type="hidden" name="OrderId" value="@Model.OrderId" />
    <div class="form-group">
        <label for="CustomerId">Customer ID:</label>
        <input type="text" class="form-control" id="CustomerId" name="CustomerId" value="@Model.CustomerId" required />
    </div>
    <div class="form-group">
        <label for="AdditionalInfo">Additional Info:</label>
        <textarea class="form-control" id="AdditionalInfo" name="AdditionalInfo">@Model.AdditionalInfo</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>
