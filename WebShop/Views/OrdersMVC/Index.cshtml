@model IEnumerable<WebShop.Models.Order>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>All Orders</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Products Ordered</th>
            <th>Customer ID</th>
            <th>Customer Name</th> <!-- New column header -->
            <th>Additional Info</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>
                    @foreach (var product in order.Products)
                    {
                        <span>@product.Label </span>
                    }
                </td>
                <td>@order.CustomerId</td>
                <td>@order.Customer.Firstname @order.Customer.Name</td><!-- Displaying Customer Name and Firstname -->
                <td>@order.AdditionalInfo</td>
                <td>
                    <a class="btn btn-primary" href="/OrdersMVC/Details/@order.OrderId">Details</a>
                    <a class="btn btn-warning" href="/OrdersMVC/Edit/@order.OrderId">Edit</a>
                    <a class="btn btn-danger" href="/OrdersMVC/Delete/@order.OrderId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" href="/OrdersMVC/Create">Create</a>
<a class="btn btn-primary" href="/OrdersMVC/GetOrdersByCustomerId">Get Orders By Customer ID</a>
<a class="btn btn-primary" href="/OrdersMVC/GetOrdersByNewCustomers">Get Orders By New Customers</a>
