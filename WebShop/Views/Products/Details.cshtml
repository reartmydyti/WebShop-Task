@model WebshopService.Models.Product

<h2>Product Details</h2>

<dl class="row">
    <dt class="col-sm-2">Label</dt>
    <dd class="col-sm-10">@Model.Label</dd>

    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model.Description</dd>

    <dt class="col-sm-2">Price</dt>
    <dd class="col-sm-10">@Model.Price</dd>
</dl>

<a asp-action="Index" class="btn btn-primary">Back to Products List</a>
