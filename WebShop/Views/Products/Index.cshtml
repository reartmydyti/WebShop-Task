@model IEnumerable<WebshopService.Models.Product>

<h2>Products List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Label</th>
            <th>Description</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Label</td>
                <td>@product.Description</td>
                <td>@product.Price</td>
                <td>
                    <a asp-action="Details" asp-route-id="@product.ProductId" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@product.ProductId" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@product.ProductId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Add New Product</a>
